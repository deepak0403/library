<p id="notice"><%= notice %></p>

<div class="row">
 <div class="col-md-8 col-md-offset-2">
   <div class="panel panel-default">
     <div class="panel-heading">
     <div class="container"><div class="col-md-2">
          <%= link_to 'New Invoice', new_invoice_path, class: "btn btn-primary" %>
     </div> 
     
     <%= search_form_for @search, url: search_invoices_path, html: {class: 
     "form-inline col-md-8 col-md-offset-1,", method: :post} do |f| %>
     <div class="input-daterange">
      <div class="col-md-4">
          <%= f.text_field :date_gteq, class: "form-control", placeholder: "Start date" %>
      </div> 
      <div class="col-md-4 col-md-offset-0">
          <%= f.text_field :date_lteq, class: "form-control ", placeholder: "End date" %>
     </div>
     </div>
     <div class="col-md-2 col-md-offset-0 form-actions">
         <%=f.submit "Search", class: "btn btn-success" %>
     </div>
     <% end %>
     
     </div>
     </div>
     
      <div class="panel-body"> 
      <table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Book</th>
      <th>Category</th>
      <th>Address</th>
      <th>Isbn</th>
      <th>Phone</th>
      <th>Price</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.name %></td>
        <td><%= invoice.book %></td>
        <td><%= invoice.category %></td>
        <td><%= invoice.address %></td>
        <td><%= invoice.isbn %></td>
        <td><%= invoice.phone %></td>
        <td><%= invoice.price %></td>
        <td><%= invoice.date %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

